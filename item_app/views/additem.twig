{% extends 'layout.twig' %}

{% block body %}

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Make a Post</h1>
      {% include 'message.twig' %}
      
      <form id="additem" action="/additem" method="POST">
        <div class="form-group">
          <label for="content">Content</label>
          <input
            type="text"
            id="content"
            name="email"
            class="form-control"
            placeholder="Enter your content"
          />
        </div>
        <div class="form-group">
          <label for="childType">Child Type</label>
          <input
            type="text"
            id="childType"
            name="childType"
            class="form-control"
            placeholder="Enter child type"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Post</button>
      </form>
    </div>
  </div>
</div>

 
{% endblock %}
