{% extends 'layout.twig' %}

{% block body %}

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Delete a post</h1>
      {% include 'message.twig' %}

      <form id="delete" action="" method="DELETE">
        <div class="form-group">
          <label for="id">ID</label>
          <input
            type="text"
            id="id"
            name="id"
            class="form-control"
            placeholder="Enter a post id to delete"
          />
        </div>
      
        <button type="submit" class="btn btn-primary btn-block">Delete</button>
      </form>
    </div>
  </div>
</div>

 
{% endblock %}
