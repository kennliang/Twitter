{% extends 'layout.twig' %}

{% block body %}


<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Username: {{post.username}}  ID: {{post.id}}</h5>
        </div>
        <div class="card-body">
            <p class="card-text" >Content: {{post.content}}</p>
        </div>
        <div class="card-footer">
            <p>Likes: {{post.property.likes}}  Retweets:  {{post.retweeted}}  Timestamp: {{post.timestamp}}</p>
        </div>

    </div>
  </div>
</div>

  
{% endblock %}
