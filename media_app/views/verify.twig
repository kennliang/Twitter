{% extends 'layout.twig' %}

{% block body %}

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Verify</h1>
      {% include 'message.twig' %}

      <form id="verify" action="/verify" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="key">Key</label>
          <input
            type="text"
            id="key"
            name="key"
            class="form-control"
            placeholder="Enter Key"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Verify</button>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/adduser">Register</a> Already Verified? <a href="/login">Login</a>
      </p>
    </div>
  </div>
</div>

 
{% endblock %}
